
#include <iostream>
#include <stdio.h>
#include <string.h>
#include <SDL.h>
#include "Screen.h"

using namespace std;
using namespace caveofprogramming;

int main(int argc, char* argv[]) {
    // Start SDL2
	Screen screen;

	if(screen.init() == false){
		cout << "Error initialising SDL" << endl;
	}

    bool quit = false;

    SDL_Event event;

    while(!quit){

    	//Update Particles
    	//Draw Particles
    	// Check for messages/events

    	while(SDL_PollEvent(&event)){
    		if (event.type == SDL_QUIT) {
				quit = true;
			}

    	}
    }

    screen.close();


    return 0;
}
