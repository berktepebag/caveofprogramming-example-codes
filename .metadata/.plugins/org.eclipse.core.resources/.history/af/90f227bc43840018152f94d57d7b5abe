#include "Particle.h"
#include <stdlib.h>

namespace caveofprogramming {

Particle::Particle() {

	m_x = ((2.0 * (double)rand())/RAND_MAX) - 1;
	m_y = ((2.0 * (double)rand())/RAND_MAX) - 1;
}

Particle::~Particle() {
	// TODO Auto-generated destructor stub
}

void Particle::update(){

	const double xspeed = 0.001 * (((2.0 * rand())/RAND_MAX) -1);
	const double yspeed = 0.001 * (((2.0 * rand())/RAND_MAX) -1);


	m_x += xspeed;
	m_y += yspeed;
}

} /* namespace caveofprogramming */
